* { margin:0; padding:0; border:0; outline:0 !important; font-family:'Denk One'; }

#btn-musica { width:32px; height:32px; position:absolute; top:5px; right:5px; }

body { overflow:hidden; }

#fight { width:342px; height:504px; margin:5px auto; }
.fichas {
	float:left; width:36px; height:54px; overflow:hidden; background-color:#0C3; border:solid 1px #000;
	background-position:center center; background-repeat:no-repeat;
}
.fichas .over { width:100%; height:100%; opacity:0.7; }
.fichas .rojo { background-color:#F33; }
.fichas .azul { background-color:#09F; }
.jugAvat { background-size:54px 54px; background-color:#0CF; }
.eneAvat { background-size:54px 54px; background-color:#FF0; }
.jugador { background-color:#0F0; }
.enemigo { background-color:#090; }

.fichas .box {
	width:28px; height:auto; position:absolute; background:#000; color:#FFF; font-family:'Denk One'; line-height:10px;
	margin-top:-15px; font-size:10px; padding:4px; border-radius:8px; display:none; z-index:9;
}
.fichas .box div { background-position:right center; background-repeat:no-repeat; background-size:9px 9px; }
.fichas .box-vid { background-image:url(vida.png); }
.fichas .box-atk { background-image:url(attack.png); }
.fichas .box-spd { background-image:url(speed.png); }
.fichas .box-acc { background-image:url(rango.png); }

#fight-indica { color:#000; text-align:center; }
#fight-turno {
	position:absolute; width:100%; height:100%; background:url(../characters/fondo.png) repeat; top:0; display:table;
	text-align:center; text-decoration:none;
}
#fight-turno p { color:#FFF; font-size:20px; display:table-cell; vertical-align:middle; }
#fight-botones { width:220px; text-align:center; margin:auto; display:none; height:40px; padding-top:10px; }
#fight-deshacer { background:#333; color:#FFF; font-size:20px; padding:10px; border-radius:10px; text-decoration:none; margin-right:20px; }
#fight-listo	{ background:#FC0; color:#000; font-size:20px; padding:10px; border-radius:10px; text-decoration:none; }